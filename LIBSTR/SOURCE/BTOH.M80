        name    btoh

        public  btoh

        cseg

        extrn   bth
        extrn   BufNum

;------------------------------------------------------------------------
; преобразует ьайт в hex-строку
;------------------------------------------------------------------------
; на входе:
;    C  - байт
; на выходе:
;    HL - буфер
btoh:
        lxi     D, BufNum
        mov     A, C
        call    bth
        xra     A
        stax    D
        lxi     H, BufNum
        ret

end

